<%- include("./layouts/header.ejs") %>
<%- include("./layouts/navbar.ejs") %> 

  <div class="container">
    <div class="row">
      <div class="col-sm-3 mt-5">
        <h2 class="alert alert-success text-center">Borrow Book</h2>
        <form method="POST">
          <div class="mb-3">
            <label for="studentName" class="form-label">Student Name</label>
            <input type="text" class="form-control" name="studentName" />
          </div>
          <div class="mb-3">
            <label for="studentId" class="form-label">Student ID</label>
            <input type="text" class="form-control" name="studentId" />
          </div>
          <div class="mb-3">
            <label for="bookName" class="form-label">Book name</label>
            <select class="form-select" aria-label="Default select example" name="bookName">
              <optgroup label="Select book">
                <% bookData.forEach(function(item){ %>
                  <option value="<%= item.id %>">
                    <%= item.name %>
                  </option>
                  <% }) %>
              </optgroup>
            </select>
          </div>
          <div class="mb-3">
            <label for="borrowDate" class="form-label">Borrow Date</label>
            <input type="date" class="form-control" name="borrowDate" />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="col-sm-9 mt-5">
        <h2 class="alert alert-danger text-center">List of Borrow Book</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Student Name</th>
              <th scope="col">Student ID</th>
              <th scope="col">Book name</th>
              <th scope="col">Borrow Date</th>
              <th scope="col">Return Date</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <!-- <% console.log(borrowBook); %> -->
            <% var i=1 %>
              <% borrowBook.forEach((item)=> {%>
                <tr>
                  <td>
                    <%= i++%>
                  </td>
                  <td>
                    <%= item.studentName%>
                  </td>
                  <td>
                    <%= item.studentId%>
                  </td>
                  <td>
                    <%= item.bookName.name%>
                  </td>
                  <td>
                    <%= item.borrowDate%>
                  </td>
                  <td>
                    <%= item.returnDate %>
                  </td>
                  <td>
                    <form action="/borrow/returnBook/<%= item._id %>" method="get" class="d-inline">
                      <button type="submit" class="btn btn-danger">Return Book</button>
                    </form>
                  </td>
                </tr>
                <%}) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include("./layouts/footer.ejs") %>